{
  "name": "@se-2/hardhat",
  "version": "0.0.1",
  "scripts": {
    "chain": "hardhat node --network hardhat --no-deploy",
    "fork": "hardhat node --network hardhat --fork https://eth-mainnet.alchemyapi.io/v2/${ALCHEMY_API_KEY} --no-deploy",
    "deploy": "hardhat deploy --network localhost",
    "deploy:verify": "hardhat deploy --network localhost && hardhat run scripts/deploymentVerification.ts --network localhost",
    "verify": "hardhat etherscan-verify --network localhost",
    "compile": "hardhat compile",
    "generate": "hardhat run scripts/generateTsAbis.ts",
    "hardhat-verify": "hardhat verify --network localhost",
    "test": "REPORT_GAS=true hardhat test --network hardhat",
    "test:coverage": "hardhat coverage",
    "format": "prettier --write . '!(node_modules|.next|coverage)/**/*'",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "account": "hardhat run scripts/listAccount.ts --network localhost",
    "flatten": "hardhat flatten"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "dotenv": "~16.4.5",
    "envfile": "~6.18.0",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.5",
    "hardhat-deploy": "^0.12.4",
    "hardhat-deploy-ethers": "^0.4.2",
    "hardhat-gas-reporter": "^2.2.0",
    "qrcode": "~1.5.3",
    "solidity-coverage": "^0.8.12",
    "typechain": "^8.3.2"
  },
  "devDependencies": {
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "@types/qrcode": "^1",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "chai": "^4.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-node": ">=8.0.0",
    "typescript": "~5.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:fix",
      "yarn format"
    ]
  }
}
